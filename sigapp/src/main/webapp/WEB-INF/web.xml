<?xml version="1.0" ?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>SIGA - Agenda de Per√≠cias</display-name>

	<welcome-file-list>
        <welcome-file>/WEB-INF/index.jsp</welcome-file>
    </welcome-file-list>

	<context-param>
        <param-name>br.com.caelum.vraptor.provider</param-name>
        <param-value>br.com.caelum.vraptor.ioc.guice.GuiceProvider</param-value>
    </context-param>
    
    <context-param>
        <param-name>br.com.caelum.vraptor.encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    
    <context-param>
        <param-name>br.com.caelum.vraptor.packages</param-name>
        <param-value>br.gov.jfrj.siga.vraptor, br.gov.jfrj.siga.feature.entity.instantiator.vraptor</param-value>
    </context-param>

    <filter>
        <filter-name>vraptor</filter-name>
        <filter-class>br.com.caelum.vraptor.VRaptor</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>vraptor</filter-name>
        <url-pattern>/app/*</url-pattern>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    
    
    

	<security-constraint>
        <web-resource-collection>
            <web-resource-name>Paginas do Sistema</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>sigausuario</role-name>
        </auth-constraint>
    </security-constraint>

	<security-constraint>
        <web-resource-collection>
            <web-resource-name>Recursos Publicos</web-resource-name>
            <url-pattern>/public/*</url-pattern>
            <url-pattern>/rest/*</url-pattern>
        </web-resource-collection>
    </security-constraint>

	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>SigaPP</realm-name>
		<form-login-config>
			<form-login-page>/paginas/login.jsp</form-login-page>
			<form-error-page>/paginas/loginInvalido.jsp</form-error-page>
		</form-login-config>
	</login-config>

	<security-role>
		<role-name>sigausuario</role-name>
	</security-role>
	<security-role>
		<role-name>sigaadministrador</role-name>
	</security-role>
	<security-role>
		<role-name>sigadesenvolvimento</role-name>
	</security-role>
	<security-role>
		<role-name>superusuario</role-name>
	</security-role>
	
	<error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/page/erroGeral.jsp</location>
    </error-page>
</web-app>